<div class="panel panel-default collection-panel" id="@collection.id-listitem">
    <div class="col-md-4 col-sm-4 col-lg-4">
        <div class="row">
            <div style="text-align: center">
            {{#if thumbnail}}
                <a href="{{url}}">
                    <img class="img-responsive fit-in-space"
                         src="{{thumbnail}}"
                         alt="Thumbnail of {{name}}">
                </a>
            {{else}}
                <a href="{{url}}">
                    <span class="searchicon glyphicon collection-background"></span>
                </a>
            {{/if}}
            </div>
            <div>
                <h4><a href="{{url}}">{{name}}</a></h4>
                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-8">
                        <p>
                            <span>{{created}}</span>
                        </p>
                        {{#if description}}
                            <p class="abstractsummary">{{description}}</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>